<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_holder_petition_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="SUBJECT"
            android:textColor="#000000"
            android:padding="8dp"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_holder_petition_level"
            android:layout_width="match_parent"
            android:text="DIFFICULTY"
            android:gravity="center"
            android:textColor="#000000"
            android:padding="4dp"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_holder_petition_enrolled_students"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:text="30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:text=" STUDENTS ENROLLED" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_holder_petition_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />



        <TextView
            android:id="@+id/tv_holder_petition_location"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_holder_petition_description"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_holder_petition_user_id"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VIEW CLASS"
            android:id="@+id/btn_viewClass"
            style="@style/Widget.AppCompat.Button.Colored"/>

    </LinearLayout>


</android.support.v7.widget.CardView>
